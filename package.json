{
  "name": "feature-flag-monorepo",
  "version": "2.0.0",
  "description": "Feature Flag Manager - Full Stack",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "dev:backend": "cd backend && ./gradlew bootRun",
    "build:backend": "cd backend && ./gradlew build",
    "build": "npm run build:frontend && npm run build:backend",
    "docker:build": "docker build -f docker/Dockerfile -t feature-flag:latest .",
    "docker:up": "docker-compose -f docker/docker-compose.yml up",
    "docker:down": "docker-compose -f docker/docker-compose.yml down"
  }
}
